<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/custom_callout_balloon"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Custom Marker"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <Space
                android:layout_width="10sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="distance"
                android:textColor="#ff7f7f7f"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRoad"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="도로명"
                android:textColor="#ff7f7f7f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/road_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="road address name"
                android:textColor="#ff454545"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAddr"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="지번"
                android:textColor="#ff7f7f7f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="address name"
                android:textColor="#ff454545"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전화"
                android:textColor="#ff7f7f7f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="phone number"
                android:textColor="#ff454545"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGeo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/button_round"
                android:paddingStart="2dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="4dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="길찾기"
                android:textSize="12sp"
                app:backgroundTint="#03A9F4"
                app:icon="@drawable/ic_baseline_place_24"
                app:iconPadding="0dp"
                app:iconSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>